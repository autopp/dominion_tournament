<% provide(:title, "Tournament #{@round.tournament_id}: Round #{@round.number}") %>

<%= form_tag(tournament_round_path(tournament_id: @round.tournament_id, id: @round.number), method: :put) do %>
  <% @round.tables.each do |table| %>
    <% table_id = table.id %>
    <% player_num = table.scores.size %>
    <h2>Table <%= table.number %></h2>
    <table class="table">
      <% table.scores.each do |score| %>
        <% score_id = score.id %>
        <tr>
          <td><%= score.player.name %></td>
          <td><%= text_field_tag("scores[#{table_id}][#{score_id}][vp]", score.vp_text(player_num), size: 3) %></td>
          <td><%= check_box_tag("scores[#{table_id}][#{score_id}][has_extra_turn]", true , score.has_extra_turn) %></td>
          <td><%=%></td>
        </tr>
      <% end %>
    </table>
  <% end %>
  <%= submit_tag('Save', name: 'save', class: 'btn btn-primary') %>
  <%= submit_tag('Finish', name: 'finish', class: 'btn btn-primary') %>
<% end %>
