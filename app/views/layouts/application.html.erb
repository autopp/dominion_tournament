<!DOCTYPE html>
<html>
  <head>
    <title>Dominion Tournament</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}", id: "flash-message-#{message_type}") %>
      <% end %>
      <%= render 'shared/error_messages', object: @errors %>
      <%= link_to('Back', yield(:back_path)) %>
      <h1><%= yield(:title) %></h1>
      <%= yield %>
    </div>
  </body>
</html>
